<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="110dp"
    android:orientation="vertical"
    android:background="@color/main_background">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/title_layout"
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:background="@color/main_background"
        android:padding="@dimen/space_6">

        <ImageView
            android:id="@+id/left_image"
            android:layout_width="@dimen/space_90"
            android:layout_height="@dimen/space_90"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4.0dip"
            android:layout_marginTop="3.0dip"
            android:background="@mipmap/mine_qiye"
            android:scaleType="centerCrop"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvCompanyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@+id/left_image"
            android:singleLine="true"
            android:text="阿里巴巴"
            android:textColor="@color/text_main_black"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tvJobName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCompanyName"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@+id/left_image"
            android:singleLine="true"
            android:text="专业吹牛比工程师"
            android:textColor="@color/text_gray1" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvJobName"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@+id/left_image"
            android:singleLine="true"
            android:text="状态：正在招聘"
            android:textColor="@color/text_gray1" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/title_layout"
        android:layout_marginTop="@dimen/dp_10"
        android:visibility="gone"
        android:background="@color/main_black"
        />
</LinearLayout>