            android:id="@+id/etNicheng"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_10"
            android:hint="请输入企业名称"
            android:textSize="@dimen/text_size_12" />
