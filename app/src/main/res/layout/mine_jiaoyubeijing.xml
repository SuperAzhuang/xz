<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/ivHeader"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_4"
            android:text="学历"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/etXueli"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_10"
            android:hint="请输入"
            android:background="@null"
            android:textColor="@color/text_gray1"
            android:textSize="@dimen/sp_14"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/ivHeader"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_4"
            android:text="学校"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/sp_14" />


        <EditText
            android:id="@+id/etXueXiao"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_10"
            android:hint="请输入"
            android:background="@null"
            android:textColor="@color/text_gray1"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray" />

    <LinearLayout
        android:id="@+id/llRuxueShiJian"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/ivHeader"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_4"
            android:text="入学时间"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/mine_right" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray" />
    <LinearLayout
        android:id="@+id/llBiyeShiJian"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/ivHeader"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_4"
            android:text="毕业时间"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/mine_right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/ivHeader"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_4"
            android:text="专业"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/etZhuanYe"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_10"
            android:hint="请输入"
            android:background="@null"
            android:textColor="@color/text_gray1"
            android:textSize="@dimen/sp_14"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/ivHeader"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_4"
            android:text="在校经历"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/etZaixiao"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_10"
            android:hint="请输入"
            android:background="@null"
            android:textColor="@color/text_gray1"
            android:textSize="@dimen/sp_14"
           />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray" />

</LinearLayout>